<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Add Internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjetSession"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- Historique Activity -->
        <activity
            android:name=".activite.Historique"
            android:exported="false"
            android:label="@string/title_activity_historique"
            android:theme="@style/Theme.ProjetSession"
            android:fitsSystemWindows="true" />

        <!-- Voyage Activity -->
        <activity
            android:name=".activite.Voyage"
            android:exported="false"
            android:theme="@style/Theme.ProjetSession"
            android:fitsSystemWindows="true" />

        <!-- Inscription Activity -->
        <activity
            android:name=".activite.Inscription"
            android:exported="false"
            android:label="@string/title_activity_inscription"
            android:theme="@style/Theme.ProjetSession"
            android:fitsSystemWindows="true" />

        <!-- Connexion Activity -->
        <activity
            android:name=".activite.Connexion"
            android:exported="false"
            android:label="@string/title_activity_connexion"
            android:theme="@style/Theme.ProjetSession"
            android:fitsSystemWindows="true" />

        <!-- Details Activity -->
        <activity
            android:name=".Details"
            android:exported="false"
            android:label="@string/title_activity_details"
            android:theme="@style/Theme.ProjetSession"
            android:fitsSystemWindows="true" />

        <!-- Accueil Activity -->
        <activity
            android:name=".Accueil"
            android:exported="false"
            android:label="@string/title_activity_accueil"
            android:theme="@style/Theme.ProjetSession"
            android:fitsSystemWindows="true" />

        <!-- Main Activity -->
        <activity
            android:name=".activite.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ProjetSession"
            android:fitsSystemWindows="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>