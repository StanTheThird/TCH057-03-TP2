<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Disable fullscreen to ensure the navigation and status bars are visible -->
        <item name="android:windowFullscreen">false</item>
        <!-- Set default window background -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- Custom theme for ProjetSession -->
    <style name="Theme.ProjetSession" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/abeezee_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/black_rounded_frame_360</item>
        <item name="android:popupBackground">@drawable/black_rounded_frame_360</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>
</resources>