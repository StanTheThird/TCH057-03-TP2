<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/dark_blue"
    android:padding="@dimen/normal_padding">

    <!-- First Line - Destination + Date -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/large_padding">

        <!-- Destination Info -->
        <LinearLayout
            android:id="@+id/left_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/voyageVersText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abeezee_italic"
                android:text="@string/voyage_vers"
                android:textColor="@color/white_50"
                android:textSize="14sp"
                android:layout_marginBottom="@dimen/negative_padding"/>

            <TextView
                android:id="@+id/destinationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adlamdisplay_regular"
                android:text="@string/destination"
                android:textColor="@color/white"
                android:textSize="20sp"/>
        </LinearLayout>

        <!-- Date -->
        <TextView
            android:id="@+id/voyage_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/adlamdisplay_regular"
            android:text="@string/_12_12_2024"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </RelativeLayout>

    <!-- Second Line - Booking Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/large_padding">

        <TextView
            android:id="@+id/reservation_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:background="@drawable/white_rounded_frame_360"
            android:fontFamily="@font/adlamdisplay_regular"
            android:paddingHorizontal="@dimen/large_padding"
            android:paddingVertical="@dimen/normal_padding"
            android:text="@string/r_serv_le_02_01_2025"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/white_rounded_frame_360"
            android:fontFamily="@font/adlamdisplay_regular"
            android:paddingHorizontal="@dimen/large_padding"
            android:paddingVertical="@dimen/normal_padding"
            android:text="@string/prix_2_800"
            android:textColor="@color/white"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Third Line - Status + Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/normal_padding">

        <!-- Status Container -->
        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/white_rounded_frame_360"
            android:fontFamily="@font/adlamdisplay_regular"
            android:paddingHorizontal="@dimen/large_padding"
            android:paddingVertical="@dimen/normal_padding"
            android:text="Statut : ConfirmÃ©e"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/annuler"
            android:layout_marginStart="24dp"
            android:backgroundTint="@color/bright_blue"
            android:fontFamily="@font/adlamdisplay_regular"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingHorizontal="@dimen/large_padding"
            android:paddingVertical="@dimen/normal_padding"/>
    </LinearLayout>
</LinearLayout>